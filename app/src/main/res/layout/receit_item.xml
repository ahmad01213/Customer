<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/food_raw_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/id_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text=" زربيان جمبري"
                android:textColor="#00ffffff"
                android:background="#00ffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/food_raw_title"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/food_raw_image"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/res_count"
                android:textColor="#2a057e"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/food_raw_desc"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_raw_title"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/food_raw_image"
                android:layout_toRightOf="@+id/food_raw_cost"
                android:lines="2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/food_raw_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/food_raw_title"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/minus"
                android:textColor="#08580c"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/res_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/food_raw_title"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/food_raw_image"
                android:textColor="#230e00"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>