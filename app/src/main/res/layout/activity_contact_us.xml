<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    tools:context=".ContactUs"
    android:orientation="vertical"
    android:background="@drawable/main"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="600dp"
      android:orientation="vertical"
      android:layout_gravity="center"
      android:paddingBottom="20dp"
      >

      <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/con_us_edit_tex"
          android:drawablePadding="10dp"
          android:gravity="center"
          android:hint="الإسم"
          android:padding="15dp" />
      <EditText
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/con_us_edit_tex"
          android:drawablePadding="20dp"
          android:gravity="center"
          android:hint="البريد الإلكتروني"
          android:padding="15dp" />

      <EditText
          android:id="@+id/phon"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/con_us_edit_tex"
          android:drawablePadding="20dp"
          android:gravity="center"
          android:hint="رقم التليفون"
          android:inputType="number"
          android:padding="15dp" />

      <EditText
          android:id="@+id/massage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="10dp"
          android:background="@drawable/con_us_edit_tex"
          android:drawablePadding="20dp"
          android:gravity="center"
          android:hint="الرسالة"
          android:padding="15dp" />
    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إرسال"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#184887"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:background="@drawable/button_contact_us"
        />
      <TextView
          android:id="@+id/hot_line"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="#460405"
          android:text="ويمكنكم الإتصال علي الرقم الموحد 920009106 "
          android:layout_gravity="center_horizontal"
          android:textSize="17sp"
          />
</LinearLayout>
</ScrollView>