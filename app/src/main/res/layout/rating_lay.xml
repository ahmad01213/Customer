<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="تقييمك يدعمنا كثيرا "
        android:textColor="#b95f04"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/rate_order_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تقييم الطلب"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <RatingBar
        android:id="@+id/ratingBar_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="0"
        android:stepSize="1.0"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/rate_del_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تقييم مندوب التوصيل"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <RatingBar
        android:id="@+id/ratingBar_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="0"
        android:stepSize="1.0"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_rat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="إرسال"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="إلغاء"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>